{% extends template('widget') %}

{% define data = {
    shoppingListSubtotal: _widget.shoppingListSubtotal,
} %}

{% set subtotalPriceClasses = 'spacing spacing--inner spacing-bottom spacing-bottom--big' %}

{% block body %}
    {% include molecule('subtotal-price', 'ShoppingListWidget') with {
        class: subtotalPriceClasses,
        data: {
            amount: data.shoppingListSubtotal,
        },
    } only %}
{% endblock %}
