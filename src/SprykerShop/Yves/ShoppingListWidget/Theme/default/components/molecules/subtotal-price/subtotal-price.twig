{% extends model('component') %}

{% define config = {
    name: 'subtotal-price',
} %}

{% define data = {
    amount: required,
    currencyIsoCode: null,
    title: 'customer.account.shopping_list.subtotal' | trans,
} %}

{% block body %}
    <div class="grid grid--justify">
        {% block content %}
            {% set titleClasses = 'col' %}
            {% set priceClasses = 'col' %}

            {% block title %}
                <h6 class="{{ titleClasses }}">
                    {{- data.title -}}
                </h6>
            {% endblock %}

            {% block price %}
                {% include molecule('money-price') with {
                    class: priceClasses,
                    data: {
                        amount: data.amount,
                        currencyIsoCode: data.currencyIsoCode,
                    },
                } only %}
            {% endblock %}
        {% endblock %}
    </div>
{% endblock %}
