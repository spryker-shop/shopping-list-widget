{% extends model('component') %}

{% define config = {
    name: 'subtotal-price'
} %}

{% define data = {
    amount: required
} %}

{% block body %}
    <h6 class="{{ config.name }}__title col">{{ 'customer.account.shopping_list.subtotal' | trans }}</h6>
    {% include molecule('price') with {
        class: 'col',
        data: {
            amount: data.amount
        }
    } only %}
{% endblock %}
